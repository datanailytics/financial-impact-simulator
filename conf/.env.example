# Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# Environment Type (development, testing, staging, production)
ENVIRONMENT=development

# Application Settings
APP_NAME=financial_simulator
APP_VERSION=1.0.0
APP_DEBUG=true

# Database Configuration
DB_HOST_DEV=localhost
DB_PORT_DEV=5432
DB_NAME_DEV=financial_simulator_dev
DB_USER_DEV=dev_user
DB_PASSWORD_DEV=dev_password

# Production Database (uncomment and set for production)
# DB_HOST_PROD=your-prod-db-host.com
# DB_PORT_PROD=5432
# DB_NAME_PROD=financial_simulator_prod
# DB_USER_PROD=prod_user
# DB_PASSWORD_PROD=your-secure-password

# Staging Database (uncomment and set for staging)
# DB_HOST_STAGING=your-staging-db-host.com
# DB_PORT_STAGING=5432
# DB_NAME_STAGING=financial_simulator_staging
# DB_USER_STAGING=staging_user
# DB_PASSWORD_STAGING=your-staging-password

# Redis Cache Configuration
REDIS_HOST_DEV=localhost
REDIS_PORT_DEV=6379
REDIS_PASSWORD_DEV=

# Production Redis (uncomment and set for production)
# REDIS_HOST_PROD=your-prod-redis-host.com
# REDIS_PORT_PROD=6379
# REDIS_PASSWORD_PROD=your-redis-password

# Security Keys
SECRET_KEY_DEV=dev-secret-key-change-in-production
JWT_SECRET_KEY_DEV=jwt-dev-secret-key
ENCRYPTION_KEY_DEV=dev-encryption-key

# Production Security (uncomment and set for production)
# SECRET_KEY_PROD=generate-secure-random-key
# JWT_SECRET_KEY_PROD=generate-secure-jwt-key
# ENCRYPTION_KEY_PROD=generate-secure-encryption-key

# API Keys and External Services
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
POLYGON_API_KEY=your-polygon-api-key
FRED_API_KEY=your-fred-api-key
QUANDL_API_KEY=your-quandl-api-key

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=financial-simulator-data

# Google Cloud Configuration (if using GCP)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=financial-simulator-data

# Azure Configuration (if using Azure)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_CONTAINER_NAME=financial-simulator-data

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
DEFAULT_FROM_EMAIL=noreply@financialsimulator.com

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_MOCK_DATA=false
ENABLE_PERFORMANCE_PROFILING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_BURST=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100MB
LOG_RETENTION_DAYS=30

# Model Configuration
MODEL_REGISTRY_PATH=./models
MODEL_CACHE_ENABLED=true
MODEL_CACHE_TTL=3600

# Data Storage
DATA_STORAGE_PATH=./data
DATA_RETENTION_DAYS=365
ENABLE_DATA_COMPRESSION=true

# API Configuration
API_BASE_URL=http://localhost:8000
API_VERSION=v1
API_TIMEOUT=30
API_MAX_RETRIES=3

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10
WEBHOOK_MAX_RETRIES=3

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/financial_simulator_test
TEST_REDIS_URL=redis://localhost:6380/1
PYTEST_WORKERS=4

# Performance Settings
MAX_WORKERS=8
BATCH_SIZE=1000
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Session Configuration
SESSION_SECRET_KEY=your-session-secret
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC
SCHEDULER_THREAD_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Miscellaneous
TZ=UTC
PYTHONPATH=.
FLASK_ENV=development
DJANGO_SETTINGS_MODULE=config.settings.development